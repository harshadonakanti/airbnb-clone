<% layout("/layouts/boilerplate") %>

<style>
  /* Filter styles */
  .filter {
    text-align: center;
    margin-right: 1rem;
    margin-top: 0.5rem;
    opacity: 0.7;
    transition: all 0.3s ease;
    padding: 0.5rem 0.8rem;
    border-radius: 10px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    background: #f8f9fa;
    box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
    transform: scale(1.05);
  }

  .filter p {
    font-size: 0.9rem;
    margin-top: 0.3rem;
  }

  /* Tax toggle compact */
  .tax-toggle {
    border: 1px solid #ccc;
    border-radius: 1rem;
    padding: 0.3rem 0.8rem;
    margin-left: auto;
    display: flex;
    align-items: center;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  /* Responsive tweak: hide filters on small screens */
  @media (max-width: 768px) {
    .filters-container {
      display: none !important;
    }
  }

  .tax-info {
    display: none;
  }
</style>

<!-- Filters Row -->
<div class="container-fluid mt-3">
  <div class="filters-container d-flex flex-wrap align-items-center">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>

    <!-- Tax toggle -->
    <div class="tax-toggle ms-auto">
      <div class="form-check-reverse form-switch m-0">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexswitchCheckDefault"
        />
        <label
          class="form-check-label ms-1"
          for="flexswitchCheckDefault"
        >
          After Taxes
        </label>
      </div>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="container-fluid">
  <div class="row g-3">
    <% for (let listing of allListings) { %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card listing-card h-100">
        <a
          href="/listings/<%= listing._id %>"
          class="listing-link text-decoration-none text-dark"
        >
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_img"
            style="height: 20rem; object-fit: cover; width: 100%;"
          />
          <div class="card-body">
            <p class="card-text text-truncate">
              <b><%= listing.title %></b><br />
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</div>


<script>
  let taxSwitch = document.getElementById("flexswitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
