<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the Title</div>
        </div>
        <div class="mb-3">
          <label for="Description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
 <%= listing.description %> </textarea
          >
          <div class="invalid-feedback">Enter the Description</div>
        </div>
        <div class="mb-3">
          Original Listing Image<br />
          <img src="<%=  originalImageUrl%>" alt="listingphoto" />
        </div>

        <div class="mb-3">
          <label for="Image" class="form-label">Upload new Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="Price" class="form-label">Price</label>
            <input
              name="listing[price]"
              id=""
              type="number"
              value="<%= listing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter the Amount</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="Location" class="form-label">Location</label>
            <input
              type="text"
              required
              class="form-control"
              name="listing[location]"
              id=""
              value="<%= listing.location %>"
            />
            <div class="invalid-feedback">Enter the Location</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="Country" class="form-label">Country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            id=""
            required
            value="<%= listing.country %>"
          />
          <div class="invalid-feedback">Enter the Country</div>
        </div>
        <button class="btn btn-dark add-btn">Edit Listing</button>
        <br />
        <br />
      </form>
    </div>
  </div>
</body>
