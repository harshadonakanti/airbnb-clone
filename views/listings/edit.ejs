<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-12 col-md-8 offset-md-2">
      <h3>Edit Your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the Title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="Description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" rows="4" required>
<%= listing.description %></textarea>
          <div class="invalid-feedback">Enter the Description</div>
        </div>

        <!-- Original Image -->
        <div class="mb-3">
          <label class="form-label">Original Listing Image</label><br />
          <img src="<%= originalImageUrl %>" alt="listingphoto" class="img-fluid rounded" style="max-height: 250px; object-fit: cover;" />
        </div>

        <!-- Upload New Image -->
        <div class="mb-3">
          <label for="Image" class="form-label">Upload New Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <!-- Price + Location Row -->
        <div class="row">
          <div class="mb-3 col-12 col-md-4">
            <label for="Price" class="form-label">Price</label>
            <input
              name="listing[price]"
              type="number"
              value="<%= listing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter the Amount</div>
          </div>

          <div class="mb-3 col-12 col-md-8">
            <label for="Location" class="form-label">Location</label>
            <input
              type="text"
              required
              class="form-control"
              name="listing[location]"
              value="<%= listing.location %>"
            />
            <div class="invalid-feedback">Enter the Location</div>
          </div>
        </div>

        <!-- Country -->
        <div class="mb-3">
          <label for="Country" class="form-label">Country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            required
            value="<%= listing.country %>"
          />
          <div class="invalid-feedback">Enter the Country</div>
        </div>

        <!-- Submit -->
        <button class="btn btn-dark add-btn">Edit Listing</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
